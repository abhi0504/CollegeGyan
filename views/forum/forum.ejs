<%- include('../partials/header') %>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
<div class="container-fluid">
<a class="navbar-brand" href="#">DTU Forum</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNav">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">Ask a question</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/internship">Internship Stats</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Placement Stats</a>
    </li>
  </ul>
</div>
</div>
</nav>

<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="forum">

  <h2 class="feed-heading">Your Feed</h2>

  <%  for(var i = 0 ; i < body.length ; i++) { %>

  <div class="feed-content">
    <h2 class="question"><%= body[i].topic %> </h2>   
    <i class="user-pic fa fa-user-circle fa-2x"></i>
    <div class="feed-row-1">
      <div class="user-info">
        <p><%= body[i].name %></p>
        <p><%= body[i].current %> , <%= body[i].description %></p>
      </div> 
      <div class="thumbs">
        <i class="thumbs-up fas fa-thumbs-up fa-2x"></i>
        <i class="thumbs-down fas fa-thumbs-down fa-2x"></i>
      </div>
    </div>
    <div class="answer-post">
      <p class="answer"><%= body[i].body %>
      </p>  
    </div>    
  </div>
  <div style="margin-bottom: 80px;">
    <hr class="dotted-hr">            
  </div>

<%  } %>



<%- include('../partials/footer') %>
