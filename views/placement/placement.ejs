<%- include('../partials/header') %>
    <main>
        <h2 class="-title">Insert_institute_here placements</h2>
        <section class="chart section">
            <p class="intern-cta"> A student of DTU? Please provide information <a href="#">here</a></p>
            <div class="canvas">
                <canvas id="myChart" width="200" height="200"></canvas>
            </div>
            <p class="trend-info">
                Looking at the recent trend in placement offers, there has been a (insert_trend) in the offers.
            </p>
        </section>

        <hr class="dotted-hr">

        <section class="company-visiting">
            <h2 class="company-title">Companies Visiting </h2>
            <div class="company-table">
                    <ul class="responsive-table">
                      <li class="table-header">
                        <div class="col col-1">Company</div>
                        <div class="col col-2">CGPA Required</div>
                        <div class="col col-3">Allowed Branches</div>
                        <div class="col col-4">CTC Offered</div>
                      </li>
                      <li class="table-row">
                        <div class="col col-1" data-label="Job Id">Comp.1</div>
                        <div class="col col-2" data-label="Customer Name">5</div>
                        <div class="col col-3" data-label="Amount">2 months</div>
                        <div class="col col-4" data-label="Payment Status">Rs. 50,000</div>
                      </li>
                      <li class="table-row">
                        <div class="col col-1" data-label="Job Id">Comp.2</div>
                        <div class="col col-2" data-label="Customer Name">10</div>
                        <div class="col col-3" data-label="Amount">2 months</div>
                        <div class="col col-4" data-label="Payment Status">Rs. 20,000</div>
                      </li>
                      <li class="table-row">
                        <div class="col col-1" data-label="Job Id">Comp.3</div>
                        <div class="col col-2" data-label="Customer Name">12</div>
                        <div class="col col-3" data-label="Amount">2 months</div>
                        <div class="col col-4" data-label="Payment Status">Rs. 5,000</div>
                      </li>
                      <li class="table-row">
                        <div class="col col-1" data-label="Job Id">Comp.4</div>
                        <div class="col col-2" data-label="Customer Name">13</div>
                        <div class="col col-3" data-label="Amount">2 months</div>
                        <div class="col col-4" data-label="Payment Status">Rs. 10,000</div>
                      </li>
                    </ul>
            </div>
        </section>

        <hr class="dotted-hr">

        <section class="company-types">
            <h2 class="company-title"> Companies By Type</h2>

            <canvas id="pieChart" width="200" height="200"></canvas>
        </section>
    </main>


<script src="https://cdn.jsdelivr.net/npm/chart.js@3.1.1/dist/chart.min.js"></script>

